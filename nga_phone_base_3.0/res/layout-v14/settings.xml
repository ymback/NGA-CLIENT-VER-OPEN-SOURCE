<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/picshowtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/setting_picshow"
            android:textStyle="bold" >
        </TextView> 

        <View
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/night_fore_color" >
        </View>

        <Switch
            android:id="@+id/checkBox_down_img_no_wifi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:text="@string/nowifi_downimg" />

        <RelativeLayout
            android:id="@+id/image_quality_chooser"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/touchable"
            android:clickable="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/image_quality_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="5dp"
                android:text="@string/image_quality_info"
                android:textSize="16dp" >
            </TextView>

            <TextView
                android:id="@+id/image_quality_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:ellipsize="end"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="@string/image_quality_option_original"
                android:textSize="16dp" >
            </TextView>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:background="@color/night_fore_color" >
        </View>

        <Switch
            android:id="@+id/checkBox_download_avatar_no_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:text="@string/download_avatar_nowifi" />

        <TextView
            android:id="@+id/optiontitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/setting_option"
            android:textStyle="bold" >
        </TextView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/night_fore_color" >
        </View>

        <Switch
            android:id="@+id/checkBox_color_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:text="@string/color_txt" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:background="@color/night_fore_color" >
        </View>

        <Switch
            android:id="@+id/checkBox_new_weiba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:text="@string/new_weiba"
            android:visibility="gone" /> <!-- 隐藏尾巴，因为暂时可以伪装官方了 -->

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:background="@color/night_fore_color"
            android:visibility="gone" >
        </View> <!-- 隐藏尾巴，因为暂时可以伪装官方了 -->

        <Switch
            android:id="@+id/checkBox_split"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:text="@string/split" />

        <Switch
            android:id="@+id/checkBox_replysplit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:text="@string/replysplit" />

        <RelativeLayout
            android:id="@+id/lefthand_righthand_chooser"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/touchable"
            android:clickable="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lefthand_righthand_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="5dp"
                android:text="@string/lefthand_righthand"
                android:textSize="16dp" >
            </TextView>

            <TextView
                android:id="@+id/lefthand_righthand_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:ellipsize="end"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="@string/righthand_option_original"
                android:textSize="16dp" >
            </TextView>
        </RelativeLayout>

        <View
            android:id="@+id/viewgone1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:background="@color/night_fore_color" >
        </View>

        <Switch
            android:id="@+id/checkBox_ha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:text="@string/ha" />

        <View
            android:id="@+id/viewgone2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:background="@color/night_fore_color" >
        </View>

        <Switch
            android:id="@+id/checkBox_fullscreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:text="@string/fullscreenmode" />

        <View
            android:id="@+id/viewgone3"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:background="@color/night_fore_color" >
        </View>
        
        <Switch
            android:id="@+id/checkBox_kitwebview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:text="@string/kitwebview" />

        <View
            android:id="@+id/viewgone4"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:background="@color/night_fore_color" >
        </View>

        <Switch
            android:id="@+id/checkBox_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:text="@string/notification_on" />

        <Switch
            android:id="@+id/checkBox_notification_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="6dp"
            android:text="@string/notification_sound" />

        <RelativeLayout
            android:id="@+id/blackgun_sound_chooser"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/touchable"
            android:clickable="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/blackgun_sound_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:paddingTop="5dp"
                android:text="@string/blackgun_sound_info"
                android:textSize="16dp" >
            </TextView>

            <TextView
                android:id="@+id/blackgun_sound_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/blackgun_sound_info"
                android:ellipsize="end"
                android:gravity="right"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="@string/blackgun_sound_0"
                android:textSize="16dp" >
            </TextView>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:background="@color/night_fore_color" >
        </View>

        <RelativeLayout
            android:id="@+id/mediaplayer_choose_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_weight="0.03"
            android:layout_marginLeft="6dp"
            android:background="@drawable/touchable"
            android:clickable="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/mediaplayer_choose_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="5dp"
                android:text="@string/mediaplayer_choose_info"
                android:textSize="16dp" >
            </TextView>

            <TextView
                android:id="@+id/mediaplayer_choose_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:ellipsize="end"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="@string/play_all"
                android:textSize="16dp" >
            </TextView>
        </RelativeLayout>

        <TextView
            android:id="@+id/uishowtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/setting_uishow"
            android:textStyle="bold" >
        </TextView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/night_fore_color" >
        </View>

        <Switch
            android:id="@+id/checkBox_night_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:text="@string/nightmode" />


        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:background="@color/night_fore_color" >
        </View>
        
        
        <Switch
            android:id="@+id/checkBox_icon_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:text="@string/iconmode" />


        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:background="@color/night_fore_color" >
        </View>

        <Switch
            android:id="@+id/checkBox_show_signature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:text="@string/showSignature" /> 
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:background="@color/night_fore_color" >
        </View>

        <Switch
            android:id="@+id/checkBox_show_static"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:text="@string/show_static" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:background="@color/night_fore_color" >
        </View>

        <Switch
            android:id="@+id/checkBox_show_lajibankuai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:text="@string/show_lajibankuai" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:background="@color/night_fore_color" >
        </View>

        <Switch
            android:id="@+id/checkBox_addreplybutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:text="@string/addreplybutton" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:background="@color/night_fore_color" >
        </View>

        <Switch
            android:id="@+id/checkBox_show_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:text="@string/showAnimation" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:background="@color/night_fore_color" >
        </View>

        <TextView
            android:id="@+id/textView_font_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="6dp"
            android:text="@string/text_size" />

        <SeekBar
            android:id="@+id/fontsize_seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="20dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:background="@color/night_fore_color" >
        </View>

        <WebView
            android:id="@+id/websize_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp" />

        <SeekBar
            android:id="@+id/webszie_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="20dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:background="@color/night_fore_color" >
        </View>

        <ImageView
            android:id="@+id/avatarsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="6dp"
            android:contentDescription="@string/avatar_description"
            android:src="@drawable/default_avatar" />

        <TextView
            android:id="@+id/textView_avatarsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:text="@string/avatar_size" />

        <SeekBar
            android:id="@+id/avatarsize_seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="20dp" />
    </LinearLayout>

</ScrollView>