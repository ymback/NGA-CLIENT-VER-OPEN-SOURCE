<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/login_user_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:text="@string/dbusername" >
    </TextView>

    <EditText
        android:id="@+id/login_user_edittext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:cursorVisible="true"
        android:hint="@string/db_login_user_hint"
        android:inputType="text|textNoSuggestions"
        android:drawableLeft="@drawable/ic_action_person"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black"
        android:textCursorDrawable="@null" >
    </EditText>

    <TextView
        android:id="@+id/login_password_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/password" >
    </TextView>

    <EditText
        android:id="@+id/login_password_edittext"
        android:layout_width="fill_parent"
        android:drawableLeft="@drawable/ic_action_secure"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:cursorVisible="true"
        android:inputType="text|textPassword"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textCursorDrawable="@null" >
    </EditText>

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:text="@string/login" >
    </Button>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/login_state_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="@string/dblogin_state" >
        </TextView>
        
        
        <TextView
            android:id="@+id/login_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
                android:singleLine="true"
				android:ellipsize="end"
            android:layout_alignParentRight="true"
            android:text="未登录" >
        </TextView>
    </RelativeLayout>

</LinearLayout>